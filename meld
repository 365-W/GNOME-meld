#
# i18n support
#
import sys
sys.path += [ #LIBDIR#
]
import paths
import gettext
import locale

try:
    locale.setlocale(locale.LC_ALL, '')
    gettext.bindtextdomain("meld", paths.locale_dir() )
    gettext.textdomain("meld")
    gettext.install("meld", paths.locale_dir(), unicode=1)
except (IOError,locale.Error), e:
    print "(meld): WARNING **: %s" % e
    __builtins__.__dict__["_"] = lambda x : x

#
# python version
#

pyver = (2,3)
pygtkver = (2,4,0)

def ver2str(ver):
    return ".".join(map(str,ver))

if sys.version_info[:2] < pyver:
    print _("Meld requires python%s or higher.") % ver2str(pyver)
    sys.exit(1)

#
# pygtk 2 
#
try:
    import pygtk
except ImportError, e:
    pass # catch gtk version later
else:
    pygtk.require("2.0")

#
# pygtk version
#
import gtk
if gtk.pygtk_version < pygtkver:
    print _("Meld requires pygtk-%s or higher. (found %s)") % (
        ver2str(pygtkver), ver2str(gtk.pygtk_version))
    sys.exit(1)

#
# main
#
import meldapp
try:
    minusp = sys.argv.index("--profile")
    del sys.argv[minusp]
    import profile
    profile.run("meldapp.main()")
except ValueError:
    meldapp.main()
sys.exit(0)
