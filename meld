#
# i18n support
#
import program
import sys
sys.path += [ #LIBDIR#
]
import paths
import gettext
import locale

try:
    locale.setlocale(locale.LC_ALL, '')
    gettext.bindtextdomain(program.name, paths.locale_dir() )
    gettext.textdomain(program.name)
    gettext.install(program.name, paths.locale_dir(), unicode=1)
except (IOError,locale.Error), e:
    print "(%s): WARNING **: %s" % (program.name, e)
    __builtins__.__dict__["_"] = lambda x : x

#
# python version
#

pyver = (2,3)
pygtkver = (2,4,0)

def ver2str(ver):
    return ".".join(map(str,ver))

if sys.version_info[:2] < pyver:
    print _("%(program_name)s requires %(package)s %(version)s or higher.") % \
        {"program_name":program.name, "package":"python", "version":ver2str(pyver)}
    sys.exit(1)

#
# pygtk 2 
#
try:
    import pygtk
except ImportError, e:
    pass # catch gtk version later
else:
    pygtk.require("2.0")

#
# pygtk version
#
import gtk
if gtk.pygtk_version < pygtkver:
    print _("%(program_name)s requires %(package)s %(version)s or higher.") % \
        {"program_name":program.name, "package":"pygtk", "version":ver2str(pyver)}
    sys.exit(1)


#
# main
#
def main():
    import main
    main.main()
    sys.exit(0)

if __name__=="__main__":
    main()
